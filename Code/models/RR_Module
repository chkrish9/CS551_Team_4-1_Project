const mongoose = require('mongoose');

//Import schema
const ImportModel = mongoose.Schema({
    moduleName: {
        type: String,
        required: true
    },
    date:{
        type: String
    }
});

const Import = module.exports = mongoose.model('ImportModel', ImportModel);

module.exports.addImport = function (newImport, callback) {
    //console.log(newLine);
    newImport.save(callback);
}

const SettingModel = mongoose.Schema({
    name: {
        type: String,
        required: true
    },
    value: {
        type: String,
        required: true
    }
});

const Setting = module.exports = mongoose.model('SettingModel', SettingModel);

module.exports.getSettingById = function (id, callback) {
    Setting.findById(id, callback);
}

module.exports.updateSetting = function (id, updateQuery, callback) {
    Setting.findByIdAndUpdate(id, { $set: updateQuery }, callback);
}

